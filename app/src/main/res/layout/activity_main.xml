<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlMyLayout"
    tools:context="com.mj.courseraprw3.MainActivity">

    <include android:id="@+id/myActionBar" layout="@layout/action_bar"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvMyCarrousel"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myActionBar"
        android:elevation="@dimen/cardElevationRes"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/card_padding"
        android:clickable="true"
        android:src="@drawable/camera_100"
        android:cropToPadding="true"
        android:elevation="@dimen/fabElevation"
 />

</RelativeLayout>
